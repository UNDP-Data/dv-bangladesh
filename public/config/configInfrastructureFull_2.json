{
  "dashboardId": "dashboard-id",
  "dataSettings": {
    "dataURL": "/data/data.csv",
    "fileType": "csv",
    "dataFilters": [
      {
        "column": "shapeName",
        "excludeValues": ["Kawkhali (Betbunia)"]
      }
    ]
  },
  "debugMode": true,
  "dashboardLayout": {
    "backgroundColor": false,
    "padding": "0rem",
    "rows": [
      {
        "height": 700,
        "columns": [
          {
            "graphType": "horizontalBarChart",
            "columnWidth": 1,
            "dataFilters": [
              {
                "column": "flooded_building_count",
                "excludeValues": ["NA"]
              }
            ],
            "dataSelectionOptions": [
              {
                "label": "View by",
                "ui": "radio",
                "allowedColumnIds": [
                  {
                    "value": "flooded_building_count",
                    "label": "Number of buildings"
                  },
                  {
                    "value": "flooded_road_length",
                    "label": "Road length (meters)"
                  },
                  {
                    "value": "flooded_grid_length",
                    "label": "Grid length (meters)"
                  }
                ],
                "chartConfigId": "size"
              }
            ],
            "graphDataConfiguration": [
              { "columnId": "shapeName", "chartConfigId": "label" },
              {
                "columnId": "flooded_building_count",
                "chartConfigId": "size"
              }
            ],
            "settings": {
              "graphTitle": "Top 20 most affected Upazilas by infrastucture type",
              "barPadding": 0.1,
              "sortData": "desc",
              "maxNumberOfBars": 20,
              "leftMargin": 132,
              "padding": "16px 32px 32px 16px",
              "backgroundColor": "#FAFAFA",
              "showValues": false,
              "height": 700
            }
          }
        ]
      }
    ]
  }
}
