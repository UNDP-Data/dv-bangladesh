{
  "dashboardId": "dashboard-id",
  "dataSettings": {
    "dataURL": "https://raw.githubusercontent.com/UNDP-Data/dv-bangladesh/refs/heads/main/public/data/data.csv",
    "fileType": "csv",
    "dataFilters": [
      {
        "column": "shapeName",
        "excludeValues": ["Kawkhali (Betbunia)"]
      }
    ]
  },
  "debugMode": true,
  "dashboardLayout": {
    "backgroundColor": false,
    "padding": "0rem",
    "rows": [
      {
        "height": 700,
        "columns": [
          {
            "graphType": "horizontalBarChart",
            "columnWidth": 1,
            "dataFilters": [
              {
                "column": "total_flooded_building",
                "excludeValues": ["NA"]
              }
            ],
            "graphDataConfiguration": [
              { "columnId": "shapeName", "chartConfigId": "label" },
              {
                "columnId": "flooded_building_count",
                "chartConfigId": "size"
              }
            ],
            "settings": {
              "graphTitle": "Affected building area",
              "graphDescription": "square meters",
              "barPadding": 0.1,
              "sortData": "desc",
              "maxNumberOfBars": 20,
              "leftMargin": 132,
              "padding": "16px 32px 32px 16px",
              "backgroundColor": "#FAFAFA",
              "showValues": true,
              "height": 700,
              "showTicks": false
            }
          },
          {
            "graphType": "horizontalBarChart",
            "columnWidth": 1,
            "dataFilters": [
              {
                "column": "shapeName",
                "excludeValues": ["Kawkhali (Betbunia)"]
              }
            ],
            "graphDataConfiguration": [
              { "columnId": "shapeName", "chartConfigId": "label" },
              {
                "columnId": "flooded_road_length",
                "chartConfigId": "size"
              }
            ],
            "settings": {
              "graphTitle": "Affected roads",
              "graphDescription": "meters",
              "barPadding": 0.1,
              "showTicks": false,
              "showValues": true,
              "sortData": "desc",
              "maxNumberOfBars": 20,
              "leftMargin": 132,
              "padding": "16px 32px 32px 16px",
              "backgroundColor": "#FAFAFA",
              "height": 700,
              "rightMargin": 64
            }
          },
          {
            "graphType": "horizontalBarChart",
            "columnWidth": 1,
            "dataFilters": [
              {
                "column": "shapeName",
                "excludeValues": ["Kawkhali (Betbunia)"]
              }
            ],
            "graphDataConfiguration": [
              { "columnId": "shapeName", "chartConfigId": "label" },
              {
                "columnId": "flooded_grid_length",
                "chartConfigId": "size"
              }
            ],
            "settings": {
              "graphTitle": "Affected electricity grids",
              "graphDescription": "meters",
              "barPadding": 0.1,
              "showTicks": false,
              "showValues": true,
              "sortData": "desc",
              "maxNumberOfBars": 20,
              "leftMargin": 132,
              "padding": "16px 32px 32px 16px",
              "backgroundColor": "#FAFAFA",
              "height": 700,
              "rightMargin": 64
            }
          }
        ]
      }
    ]
  }
}
