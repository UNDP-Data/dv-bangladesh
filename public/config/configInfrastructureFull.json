            "settings": {
              "graphTitle": "Affected infrastructure by type",
              "barPadding": 0.1,
              "sortData": "desc",
              "leftMargin": 132,
              "padding": "16px 32px 32px 16px",
              "backgroundColor": "#FAFAFA",
              "showValues": true,
              "showTicks": false,
              "height": 2000,
              "graphDownload": true
