          },
          {
            "graphType": "horizontalBarChart",
            "columnWidth": 1,
            "dataFilters": [
              {
                "column": "shapeName",
                "excludeValues": ["Kawkhali (Betbunia)"]
              }
            ],
            "dataSelectionOptions": [
              {
                "label": "View by",
                "ui": "radio",
