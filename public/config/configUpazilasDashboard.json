{
  "dashboardId": "dashboard-id",
  "dataSettings": {
    "dataURL": "/data/data.csv",
    "keyColumn": "shapeName",
    "fileType": "csv",
    "dataFilters": [
      {
        "column": "shapeName",
        "excludeValues": ["Kawkhali (Betbunia)"]
      }
    ]
  },
  "readableHeader": [
    { "value": "flooded_cropland", "label": "Flooded cropland" },
    { "value": "cropland_not-affected", "label": "Non-affected cropland" },
    { "value": "non_affected_pop_2024", "label": "Non-affected population" },
    { "value": "flooded_pop_2024", "label": "Affected population" }
  ],
  "dashboardLayout": {
    "backgroundColor": false,
    "rows": [
      {
        "columns": [
          {
            "graphType": "treeMap",
            "columnWidth": 1,
            "dataFilters": [
              {
                "column": "indicator",
                "includeValues": [
                  "Affected population",
                  "Non-affected population"
                ]
              }
            ],
            "graphDataConfiguration": [
              {
                "columnId": "indicator",

                "chartConfigId": "label"
              },

              {
                "columnId": "value",

                "chartConfigId": "size"
              }
            ],
            "settings": {
              "graphTitle": "Affected Population in Bangladesh",
              "padding": "16px 32px 32px 16px",
              "backgroundColor": "#FAFAFA",
              "colors": ["var(--red)", "var(--gray-400)"]
            }
          },
          {
            "graphType": "donutChart",
            "columnWidth": 1,
            "dataFilters": [
              {
                "column": "indicator",
                "includeValues": ["Flooded cropland", "Non-affected cropland"]
              }
            ],
            "graphDataConfiguration": [
              {
                "columnId": "indicator",

                "chartConfigId": "label"
              },

              {
                "columnId": "value",

                "chartConfigId": "size"
              }
            ],
            "settings": {
              "graphTitle": "Affected Cropland in Bangladesh",
              "padding": "16px 32px 32px 16px",
              "backgroundColor": "#FAFAFA",
              "colors": ["var(--red)", "var(--gray-400)"]
            }
          }
        ]
      }
    ]
  }
}
