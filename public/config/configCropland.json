{
  "dashboardId": "dashboard-id",
  "dataSettings": {
    "dataURL": "https://raw.githubusercontent.com/UNDP-Data/dv-bangladesh/refs/heads/main/public/data/data.csv",
    "keyColumn": "shapeName",
    "fileType": "csv"
  },
  "readableHeader": [
    { "value": "flooded_cropland", "label": "Flooded cropland" },
    { "value": "cropland_not-affected", "label": "Non-affected cropland" }
  ],
  "dashboardLayout": {
    "backgroundColor": false,
    "rows": [
      {
        "columns": [
          {
            "graphType": "donutChart",
            "columnWidth": 1,
            "dataFilters": [
              {
                "column": "indicator",
                "includeValues": ["flooded_cropland", "cropland_not-affected"]
              },
              {
                "column": "value",
                "excludeValues": ["NA"]
              }
            ],
            "graphDataConfiguration": [
              {
                "columnId": "indicator",

                "chartConfigId": "label"
              },

              {
                "columnId": "value",

                "chartConfigId": "size"
              }
            ],
            "settings": {
              "graphTitle": "Number of people affected by flood in Bangladesh",
              "graphDescription": "Top 20 most affected upazilas",
              "padding": "16px 32px 32px 16px",
              "backgroundColor": "#FAFAFA"
            }
          }
        ]
      }
    ]
  }
}
